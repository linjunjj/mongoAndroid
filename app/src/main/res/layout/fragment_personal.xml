<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_backgorund"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_backgorund"
        android:orientation="vertical">
        <FrameLayout
            android:background="@color/text_color_chengse"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <com.linjun.widget.WareView
                android:id="@+id/wareview"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <LinearLayout
                android:layout_gravity="center"
                android:id="@+id/header"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/ci_usericon"
                    android:src="@drawable/user_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <TextView
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:id="@+id/tv_tips"
                    android:text="请登入"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/main_backgorund"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:id="@+id/r_useracount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_item_press">

                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="我的账号"
                    android:textSize="20sp"
                    android:textColor="#424242"/>
                <TextView
                    android:layout_alignLeft="@+id/im"
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/im"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/right"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r_user_icon"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_item_press">

                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="更换头像"
                    android:textSize="20sp"
                    android:textColor="#424242"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/right"/>
            </RelativeLayout>
            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:id="@+id/r_change_psw"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_item_press">
                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="更换密码"
                    android:textSize="20sp"
                    android:textColor="#424242"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/right"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_item_press">
                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="开启上报数据"
                    android:textSize="20sp"
                    android:textColor="#424242"/>
                <com.linjun.widget.UISwitchButton
                    android:id="@+id/newsubbmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_item_press">
                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="移动网络提醒"
                    android:textSize="20sp"
                    android:textColor="#424242"/>
                <com.linjun.widget.UISwitchButton
                    android:id="@+id/intent_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r_about"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_item_press">
                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="关于云君瑞"
                    android:textSize="20sp"
                    android:textColor="#424242"/>
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/right"/>
            </RelativeLayout>
            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <RelativeLayout
                android:id="@+id/r_share"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_item_press">
                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="邀请朋友体验云君瑞"
                    android:textSize="20sp"
                    android:textColor="#424242"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/right"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r_check"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_item_press">
                <TextView
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="检查更新"
                    android:textSize="20sp"
                    android:textColor="#424242"/>
                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/right"/>
            </RelativeLayout>
            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </LinearLayout>
    </LinearLayout>
</ScrollView>