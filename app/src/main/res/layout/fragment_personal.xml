<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_backgorund"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_backgorund"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="145dp">

        <FrameLayout
            android:id="@+id/headerbody"
            android:background="@color/personlbackground"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/header"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/ci_usericon"
                    android:src="@drawable/user_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                  <TextView
                      android:id="@+id/user_name"
                      android:layout_toRightOf="@id/ci_usericon"
                      android:text="林俊"
                      android:layout_marginLeft="10dp"
                      android:textColor="@color/person_textcolor"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

                   <ImageView
                       android:src="@mipmap/identity_icon"
                       android:layout_toRightOf="@+id/user_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_toRightOf="@id/ci_usericon"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="3dp"
                       android:layout_below="@+id/user_name"
                       android:textColor="@color/person_textcolor"
                       android:text="ID:8888"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


            </RelativeLayout>
            <LinearLayout
                android:id="@+id/edit_pelpeo"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/edit_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/person_textcolor"
                    android:text="编辑"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
            <RelativeLayout
                android:background="@drawable/personheader_backgorund"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="120dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/person_textcolor"
                    android:textSize="12sp"
                    android:text="关注 0 | 粉丝 0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
             <TextView
                 android:textSize="11sp"
                 android:text="￥0"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#010101"
                android:textSize="12sp"
                android:text="我的钱包"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="11sp"
                android:text="￥0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#010101"
                android:textSize="12sp"
                android:text="当日支出"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="11sp"
                android:text="￥0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#010101"
                android:textSize="12sp"
                android:text="当日收入"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <LinearLayout
         android:gravity="center"
         android:layout_weight="1"
         android:orientation="vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

       <ImageView
           android:src="@mipmap/unpay_icon"
           android:id="@+id/unpay"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
         <TextView
             android:layout_marginTop="5dp"
             android:textColor="#080808"
             android:textSize="12sp"
             android:text="未支付"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/process_icon"
                    android:id="@+id/process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:layout_marginTop="5dp"
                    android:textColor="#080808"
                    android:textSize="12sp"
                    android:text="进行中"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/evaluate_icon"
                    android:id="@+id/evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:layout_marginTop="5dp"
                    android:textColor="#080808"
                    android:textSize="12sp"
                    android:text="待评价"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"

                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/allorder_icon"
                    android:id="@+id/allorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#080808"
                    android:textSize="12sp"
                    android:text="全部订单"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_margin="5dp"
          android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:textColor="#424242"
                android:text="服务" />
            <include layout="@layout/line_h"></include>
          <GridLayout
              android:rowCount="2"
              android:columnCount="4"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <TextView
                  android:id="@+id/my_collect"
                  android:textSize="10sp"
                  android:gravity="center"
                  android:background="@drawable/setting_item_selector"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:layout_margin="10dp"
                  android:textColor="#424242"
                  android:layout_columnWeight="1"
                  android:drawablePadding="5dp"
                  android:drawableTop="@mipmap/shouc1"
                  android:text="收藏" />
              <TextView
                  android:textSize="10sp"
                  android:gravity="center"
                  android:background="@drawable/setting_item_selector"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:layout_margin="10dp"
                  android:textColor="#424242"
                  android:drawablePadding="5dp"
                  android:layout_columnWeight="1"
                  android:drawableTop="@mipmap/renwu1"
                  android:text="任务" />
              <TextView
                  android:textSize="10sp"
                  android:gravity="center"
                  android:background="@drawable/setting_item_selector"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:layout_margin="10dp"
                  android:textColor="#424242"
                  android:layout_columnWeight="1"
                  android:drawablePadding="5dp"
                  android:drawableTop="@mipmap/oshou"
                  android:text="闲置" />
              <TextView
                  android:textSize="10sp"
                  android:gravity="center"
                  android:background="@drawable/setting_item_selector"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:layout_margin="10dp"
                  android:layout_columnWeight="1"
                  android:textColor="#424242"
                  android:drawablePadding="5dp"
                  android:drawableTop="@mipmap/jineng"
                  android:text="技能" />
              <TextView
                  android:textSize="10sp"
                  android:gravity="center"
                  android:background="@drawable/setting_item_selector"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:layout_margin="10dp"
                  android:layout_columnWeight="1"
                  android:textColor="#424242"
                  android:drawablePadding="5dp"
                  android:drawableTop="@mipmap/jianzhi"
                  android:text="兼职" />
              <TextView
                  android:textSize="10sp"
                  android:gravity="center"
                  android:background="@drawable/setting_item_selector"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:layout_margin="10dp"
                  android:layout_columnWeight="1"
                  android:textColor="#424242"
                  android:drawablePadding="5dp"
                  android:drawableTop="@mipmap/huodong"
                  android:text="活动" />

          </GridLayout>

        </LinearLayout>
      </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_margin="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/main_backgorund"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/my_a"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:textColor="#424242"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/collect"
                android:drawableRight="@mipmap/right"
                android:text="我的动态" />
            <include layout="@layout/line_h"></include>
            <TextView
                android:id="@+id/my_account"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:textColor="#424242"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/acount_icon"
                android:drawableRight="@mipmap/right"
                android:text="账户与安全" />
            <include layout="@layout/line_h"></include>
            <TextView
                android:id="@+id/my_invite"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:textColor="#424242"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/invite_icon"
                android:drawableRight="@mipmap/right"
                android:text="我邀请的人" />

        </LinearLayout>
       </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_setting"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:textColor="#424242"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/setting_icom"
                android:drawableRight="@mipmap/right"
                android:text="设置" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>