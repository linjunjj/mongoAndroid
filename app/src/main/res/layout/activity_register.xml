<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
     >
    <RelativeLayout
        android:id="@+id/title_re"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#000"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/back_icon"
            android:text="返回"/>
    </RelativeLayout>

<include layout="@layout/line_h"></include>
    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/header"
        android:layout_below="@+id/user_icon"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.linjun.widget.EditTextWithDeleteButton
            android:hint="手机号码"
            android:id="@+id/user_tel"
            android:textSize="15sp"
            android:maxLength="11"
            android:singleLine="true"
            android:text=""
            android:layout_marginBottom="1dp"
            android:drawableLeft="@mipmap/mobile"
            android:drawablePadding="10dp"
            android:background="@drawable/editshape"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <include layout="@layout/line_h"/>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.linjun.widget.EditTextWithDeleteButton
                android:hint="验证码"
                android:layout_weight="3"
                android:textSize="15sp"
                android:id="@+id/ed_auth_code"
                android:maxLength="11"
                android:singleLine="true"
                android:text=""
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/yanzhengma"
                android:background="@drawable/editshape"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <TextView
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textColor="@color/tvUrlColor"
                android:layout_weight="1"
                android:text="获取验证码"
                android:textSize="15sp"
                android:id="@+id/get_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <include layout="@layout/line_h"/>


        <com.linjun.widget.EditTextWithDeleteButton
            android:layout_marginTop="1dp"
            android:hint="请输入密码"
            android:textSize="15sp"
            android:id="@+id/user_passworld"
            android:inputType="textPassword"
            android:drawablePadding="10dp"
            android:maxLength="11"
            android:singleLine="true"
            android:text=""
            android:drawableLeft="@mipmap/passsword"
            android:background="@drawable/editshape"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <include layout="@layout/line_h"/>


        <com.linjun.widget.EditTextWithDeleteButton
            android:layout_marginTop="1dp"
            android:hint="请再次输入密码"
            android:textSize="15sp"
            android:maxLength="11"
            android:singleLine="true"
            android:text=""
            android:drawableLeft="@mipmap/againpassword"
            android:id="@+id/user_passworld_other"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:background="@drawable/editshape"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <include layout="@layout/line_h"></include>

    </LinearLayout>

    <Button
        android:id="@+id/btn_register1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_bule_selector"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp"/>


</LinearLayout>